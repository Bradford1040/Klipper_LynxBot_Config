[gcode_macro STATUS_LIGHT]
variable_value: 1
gcode:
  {% set TRANSMIT = params.TRANSMIT|default(1)|int %}
  {% if params.VALUE is not defined %}
    {% if printer['gcode_macro STATUS_LIGHT'].value|int == 0 %}
      {% set state = 1 %}
    {% else %}
      {% set state = 0 %}
    {% endif %}
  {% else %}
    {% set state = params.VALUE|int %}
  {% endif %}

  {% if state %}
    {% if params.RED is not defined and params.GREEN is not defined and params.BLUE is not defined and params.WHITE is not defined and params.BRIGHTNESS is not defined %}
      SET_LED_TEMPLATE LED=Toolhead TEMPLATE=status_light INDEX=1
    {% else %}
      {% set RED = params.RED|default(0)|int %}
      {% set GREEN = params.GREEN|default(0)|int %}
      {% set BLUE = params.BLUE|default(0)|int %}
      {% set WHITE = params.WHITE|default(0)|int %}
      {% set BRIGHTNESS = params.BRIGHTNESS|default(255)|int %}
    
      {% set RED = ((RED|int/255)|float * BRIGHTNESS)|float / 255 |float %}
      {% set GREEN = ((GREEN|int/255)|float * BRIGHTNESS)|float / 255 |float %}
      {% set BLUE = ((BLUE|int/255)|float * BRIGHTNESS)|float / 255 |float %}
      {% set WHITE = ((WHITE|int/255)|float * BRIGHTNESS)|float / 255 |float %}

      SET_LED_TEMPLATE LED=Toolhead TEMPLATE="" INDEX=1
      SET_LED LED=Toolhead RED={RED} GREEN={GREEN} BLUE={BLUE} WHITE={WHITE} TRANSMIT={TRANSMIT} INDEX=1
    {% endif %}
  {% else %}
    SET_LED_TEMPLATE LED=Toolhead TEMPLATE="" INDEX=1
    SET_LED LED=Toolhead RED=0 GREEN=0 BLUE=0 WHITE=0 TRANSMIT={TRANSMIT} INDEX=1
  {% endif %}
  SET_GCODE_VARIABLE MACRO=STATUS_LIGHT VARIABLE=value value={state}

[gcode_macro NOZZLE_LIGHT]
variable_value: 0
gcode:
  {% set TRANSMIT = params.TRANSMIT|default(1)|int %}
  {% if params.VALUE is not defined %}
    {% if printer['gcode_macro NOZZLE_LIGHT'].value|int == 0 %}
      {% set state = 1 %}
    {% else %}
      {% set state = 0 %}
    {% endif %}
  {% else %}
    {% set state = params.VALUE|int %}
  {% endif %}

  {% if state %}
    {% if params.RED is not defined and params.GREEN is not defined and params.BLUE is not defined and params.WHITE is not defined %}
      {% set RED = 255|int %}
      {% set GREEN = 197|int %}
      {% set BLUE = 143|int %}
      {% set WHITE = 255|int %}
      {% set BRIGHTNESS = params.BRIGHTNESS|default(200)|int %}
    {% else %}
      {% set RED = params.RED|default(0)|int %}
      {% set GREEN = params.GREEN|default(0)|int %}
      {% set BLUE = params.BLUE|default(0)|int %}
      {% set WHITE = params.WHITE|default(0)|int %}
      {% set BRIGHTNESS = params.BRIGHTNESS|default(255)|int %}
    {% endif %}

    {% set RED = ((RED|int/255)|float * BRIGHTNESS)|float / 255 |float %}
    {% set GREEN = ((GREEN|int/255)|float * BRIGHTNESS)|float / 255 |float %}
    {% set BLUE = ((BLUE|int/255)|float * BRIGHTNESS)|float / 255 |float %}
    {% set WHITE = ((WHITE|int/255)|float * BRIGHTNESS)|float / 255 |float %}

    SET_LED_TEMPLATE LED=Toolhead TEMPLATE="" INDEX=2,3
    SET_LED LED=Toolhead RED={RED} GREEN={GREEN} BLUE={BLUE} WHITE={WHITE} TRANSMIT={TRANSMIT} INDEX=2,3
  {% else %}
    SET_LED_TEMPLATE LED=Toolhead TEMPLATE="" INDEX=2,3
    SET_LED LED=Toolhead RED=0 GREEN=0 BLUE=0 WHITE=0 TRANSMIT={TRANSMIT} INDEX=2,3
  {% endif %}
  SET_GCODE_VARIABLE MACRO=NOZZLE_LIGHT VARIABLE=value value={state}

[gcode_macro IF_ON_SET_STATUS_LIGHT]
gcode:
  {% if printer['gcode_macro STATUS_LIGHT'].value|int != 0 %}
    {% set RED = params.RED|default(246)|int %}
    {% set GREEN = params.GREEN|default(97)|int %}
    {% set BLUE = params.BLUE|default(12)|int %}
    {% set WHITE = params.WHITE|default(0)|int %}
    {% set BRIGHTNESS = params.BRIGHTNESS|default(100)|int %}
    STATUS_LIGHT value=1 RED={RED} GREEN={GREEN} BLUE={BLUE} WHITE={WHITE}
  {% endif %}

[gcode_macro IF_ON_SET_NOZZLE_LIGHT]
gcode:
  {% if printer['gcode_macro NOZZLE_LIGHT'].value|int != 0 %}
    {% set RED = params.RED|default(0)|int %}
    {% set GREEN = params.GREEN|default(0)|int %}
    {% set BLUE = params.BLUE|default(0)|int %}
    {% set WHITE = params.WHITE|default(200)|int %}
    {% set BRIGHTNESS = params.BRIGHTNESS|default(255)|int %}
    NOZZLE_LIGHT value=1 RED={RED} GREEN={GREEN} BLUE={BLUE} WHITE={WHITE}
  {% endif %}
